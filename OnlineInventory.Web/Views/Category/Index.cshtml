    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Categories";
}
@model IEnumerable<CategoryViewModel>

<h3 class="text-center">Category</h3>
<div class="d-flex mb-3">
    <button data-toggle="ajax-modal" data-target="#addCourse" data-url='@Url.Action("AddCategory")' class="btn btn-primary"><i class="fa-solid fa-add"></i> Add Category</button>
</div>
<div class="responsive-table">
    <table class="table table-bordered">
        <thead>
            <tr class="table-dark">
                <th>Category ID</th>
                <th>Category Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                @foreach (var item in Model)
                {
                    <tr style="vertical-align: central">
                        <td>@item.CategoryID</td>
                        <td>@item.CategoryName</td>
                        <td><button data-toggle="ajax-modal" data-target="#addCourse" data-url='@Url.Action("UpdateCategory", new {id = item.CategoryID})' class=" btn btn-sm btn-warning text-white"><i class="fa-solid fa-edit"></i></button>
                        &nbsp;
                        <a asp-action="DeleteCategory" asp-route-id="@item.CategoryID" class="btn btn-sm btn-danger"><i class="fa-solid fa-trash"></i></a></td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center p-3">No Categories found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
