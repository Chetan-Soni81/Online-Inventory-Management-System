@model LoginViewModel

<form method="post" asp-action="Login" data-ajax="true" data-ajax-update="#formPanel" data-ajax-success="onSuccess">
    <h3 class="text-center">Login Form</h3>
    <div class="mb-3">
        <label asp-for=Username class="form-label"></label>
        <input asp-for=Username class="form-control" placeholder="Username" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-check ">
        <input type="checkbox" class="form-check-input" asp-for="RememberMe" />
        <label asp-for="RememberMe" class="form-check-label">Remember Me</label>
    </div>
    <span class="text-danger my-3 d-block">@Model.ErrorMessage</span>
    <div class="mb-3">
        <button type="submit" class="btn btn-success">Login</button>
    </div>
    <div class="text-center">
        Not a User? <a href="#" data-ajax="true" data-ajax-url="/Home/Register" data-ajax-update="#formPanel">Register Here</a>
    </div>
</form>

        <script>
    function onSuccess(data) {
        debugger;
        if (data.redirect) {
            window.location.href = data.redirect;
        } else {
            // Handle the response data if there's no redirect
        }
    }
        </script>