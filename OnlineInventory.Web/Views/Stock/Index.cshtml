@using OnlineInventory.ViewModels;
@{
    ViewData["Title"] = "Stocks";
}
@model IEnumerable<StockViewModel>

<h3 class="text-center">Stocks</h3>
<div class="d-flex mb-3">
    <button data-toggle="ajax-modal" data-target="#addCourse" data-url='@Url.Action("AddStock")' class="btn btn-primary"><i class="fa-solid fa-add"></i> Add Stock</button>
</div>
<div class="responsive-table">
    <table class="table table-bordered">
        <thead>
            <tr class="table-dark">
                <th>Stock ID</th>
                <th>Product Name</th>
                <th>Warehouse Name</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                @foreach (var item in Model)
                {
                    <tr style="vertical-align: central">
                        <td>@item.StockId</td>
                        <td>@item.ProductName</td>
                        <td>@item.WarehouseName</td>
                        <td>@item.Quantity</td>
                        <td>
                            <button data-toggle="ajax-modal" data-target="#addCourse" data-url='@Url.Action("UpdateStock", new { id = item.StockId })' class=" btn btn-sm btn-warning text-white"><i class="fa-solid fa-edit"></i></button>
                            &nbsp;
                            <a asp-action="DeleteWarehouse" asp-route-id="@item.StockId" class="btn btn-sm btn-danger"><i class="fa-solid fa-trash"></i></a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center p-3">No Stocks found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>