@using OnlineInventory.ViewModels;
@{
    ViewData["Title"] = "Supplier";
}
@model IEnumerable<SupplierViewModel>

<h3 class="text-center">Suppliers</h3>
<div class="d-flex mb-3">
    <button data-toggle="ajax-modal" data-target="#addCourse" data-url='@Url.Action("AddSupplier")' class="btn btn-primary"><i class="fa-solid fa-add"></i> Add Supplier</button>
</div>
<div class="responsive-table">
    <table class="table table-bordered">
        <thead>
            <tr class="table-dark">
                <th>Supplier ID</th>
                <th>Supplier Name</th>
                <th>Mobile No</th>
                <th>E-mail</th>
                <th>City</th>
                <th>Country</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                @foreach (var item in Model)
                {
                    <tr style="vertical-align: central">
                        <td>@item.SupplierId</td>
                        <td>@item.SupplierName</td>
                        <td>@item.MobileNo</td>
                        <td>@item.Email</td>
                        <td>@item.City</td>
                        <td>@item.Country</td>
                        <td>
                            <button data-toggle="ajax-modal" data-target="#addCourse" data-url='@Url.Action("UpdateSupplier", new { id = item.SupplierId })' class=" btn btn-sm btn-warning text-white"><i class="fa-solid fa-edit"></i></button>
                            &nbsp;
                            <a asp-action="DeleteWarehouse" asp-route-id="@item.SupplierId" class="btn btn-sm btn-danger"><i class="fa-solid fa-trash"></i></a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center p-3">No Warehouses found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>